/* 适老化设计原则：大字体、高对比度、明确的交互反馈 */

.container {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  box-sizing: border-box;
}

/* ========== 顶部标题 ========== */
.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  display: block;
  font-size: 56rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
}

.subtitle {
  display: block;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* ========== 待缴费项目预览 ========== */
.unpaid-summary {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 60rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.summary-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.item-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.item-type {
  font-size: 32rpx;
  color: #555;
}

.item-amount {
  font-size: 36rpx;
  font-weight: bold;
  color: #e74c3c;
}

/* ========== 语音识别状态区 ========== */
.recognition-area {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 60rpx;
  text-align: center;
  min-height: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.status-icon {
  margin-bottom: 40rpx;
}

.icon {
  width: 120rpx;
  height: 120rpx;
}

.icon.recording {
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.1);
    opacity: 0.8;
  }
}

.reply-text-area {
  width: 100%;
  padding: 20rpx;
}

.reply-text {
  display: block;
  font-size: 40rpx;
  line-height: 1.8;
  color: #333;
  word-wrap: break-word;
}

.recording-timer {
  margin-top: 20rpx;
}

.timer {
  font-size: 32rpx;
  color: #e74c3c;
  font-weight: bold;
}

/* ========== 语音录音按钮（核心交互） ========== */
.record-button-area {
  display: flex;
  justify-content: center;
  margin-bottom: 60rpx;
}

.record-button {
  width: 320rpx;
  height: 320rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: 8rpx solid rgba(255, 255, 255, 0.3);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0 12rpx 40rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
}

.record-button.recording {
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
  border-color: rgba(255, 255, 255, 0.5);
  box-shadow: 0 12rpx 40rpx rgba(231, 76, 60, 0.5);
  transform: scale(1.05);
}

.button-hover {
  transform: scale(0.95);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.button-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}

.button-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  letter-spacing: 4rpx;
}

/* ========== 快捷操作按钮 ========== */
.quick-actions {
  display: flex;
  gap: 30rpx;
  margin-bottom: 60rpx;
}

.action-button {
  flex: 1;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.action-button.secondary {
  background: rgba(255, 255, 255, 0.7);
}

.action-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #667eea;
}

/* ========== 使用提示 ========== */
.tips-area {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.tips-header {
  margin-bottom: 20rpx;
}

.tips-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
}

/* ========== 播放中指示器 ========== */
.playing-indicator {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.85);
  padding: 40rpx 60rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  z-index: 9999;
}

.speaker-icon {
  width: 60rpx;
  height: 60rpx;
}

.playing-text {
  font-size: 32rpx;
  color: #ffffff;
}

/* ========== 适老化增强：高对比度模式 ========== */
@media (prefers-contrast: high) {
  .container {
    background: #000000;
  }
  
  .title, .subtitle {
    color: #ffffff;
  }
  
  .reply-text {
    color: #000000;
    font-weight: bold;
  }
}

/* ========== 适老化增强：大字体模式 ========== */
@media (prefers-font-size: large) {
  .title {
    font-size: 64rpx;
  }
  
  .reply-text {
    font-size: 48rpx;
  }
  
  .button-text {
    font-size: 42rpx;
  }
}
